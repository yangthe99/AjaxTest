
@{
    ViewData["Title"] = "Register";
}
@section Styles {
    <style>


    </style>
}
<h1>Register</h1>
<a asp-controller="Home" asp-action="Index" class="btn btn-primary">返回首頁</a>
<br />

<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        @* <form id="userForm"> *@
            <div class="mb-3">
                <label for="InputUserName" class="form-label">姓名</label>
                <input type="text" class="form-control" id="InputUserName" name="userName">
            </div>
            <div class="mb-3">
                <label for="InputUserEmail" class="form-label">電子郵件</label>
                <input type="text" class="form-control" id="InputUserEmail" name="userEmail">
            </div>
            <div class="mb-3">
                <label for="InputUserAge" class="form-label">年紀</label>
                <input type="text" class="form-control" id="InputUserAge" name="userAge">
            </div>

        <button type="submit" id="btn1" class="btn btn-primary">Click</button>
        @* </form> *@


        <div id="div1" class="alert alert-info mt-3"></div>
    </div>
    <div class="col-3"></div>
</div>


@section Scripts{
    <script>
        const btn = document.querySelector('#btn1');
        const divInfo = document.querySelector('#div1');

        const InputUserName = document.querySelector('#InputUserName');
        const InputUserEmail = document.querySelector('#InputUserEmail');
        const InputUserAge = document.querySelector('#InputUserAge');

        // btn.addEventListener('click', async (event) => {
          
        // });

        btn.addEventListener('click', async (event) => {
            //alert("AAAA");

            const api = `@Url.Content("~/API/Register/")?userName=${InputUserName.value}&userEmail=${InputUserEmail.value}&userAge=${InputUserAge.value}`;
            const response = await fetch(api);
            const data = await response.text();

            divInfo.innerHTML = `<h3>${data}</h3>`;
        });
    </script>
}